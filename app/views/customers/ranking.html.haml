.container
  .row
    .col-md-3
      .sidebar
        = render "layouts/sidebar", diary: @diary
    .col-md-9
      %h1.text-center.en.mb-0.mt-3 Ranking
      %p.text-center.mb-0.pb-3 ランキング
      #ranking-tab-menu.d-flex.justify-content-between
        .mt-4.w-100.active
          = link_to "Day", "#day", class: "btn btn-danger btn-block en"
        .mt-4.w-100
          = link_to "Week", "#week", class: "btn btn-outline-secondary btn-block en"
        .mt-4.w-100
          = link_to "Month", "#month", class: "btn btn-outline-secondary btn-block en"
      #ranking-tab-contents
        #day.tab
          = render "ranking", customers: @day_ranking, range: "day"
        #week.tab
          = render "ranking", customers: @week_ranking, range: "week"
        #month.tab
          = render "ranking", customers: @month_ranking, range: "month"