.container
  .row
    .col-md-3
      .sidebar
        = render "layouts/sidebar"
    .col-md-9
      %table.table.table-borderless
        %tr
          %td.profile_image.text-center{rowspan: "4"}
            = link_to customer_path(@diet_method.customer), class: "text-dark" do
              = attachment_image_tag(@diet_method.customer, :profile_image, size: "70x70", fallback: "no_image.png")
              %br
              = @diet_method.customer.name
          %td.w-25
            %h3
              = @diet_method.title
          %td.small.text-secondary
            goal：
            = @diet_method.customer.target_weight
            kg
            =@diet_method.customer.target_body_fat_percentage
            ％
          %td
            = @diet_method.created_at.strftime("%m月%d日 %H:%M")
        %tr
          %td{colspan: "3"}
            - if @tags.present?
              - @tags.each do |tag|
                = link_to "#{tag.name}(#{tag.taggings_count})", diet_methods_path(tag: tag.name)
            - else
              %p 登録されているタグはありません

      %h2 やり方・効果
      = @diet_method.way
      %h2 注意点
      = @diet_method.attention
      %br
      = attachment_image_tag(@diet_method, :image, size: "700x400")
      %h2 チェックリスト
      %ul
        - @diet_method.check_lists.each do |list|
          %li
            = list.body
      %br
      %div{:id => "favorites_buttons_#{@diet_method.id}"}
        = render "diet_method_favorites/favorite", diet_method: @diet_method
      - if @diet_method.customer = current_customer
        = link_to "編集", edit_diet_method_path(@diet_method.id), data: {"turbolinks" => false}
        |
        = link_to "削除", diet_method_path(@diet_method.id), method: :delete, data: { confirm: "ダイエット方法を削除してもよろしいですか？" }
      %div{:id => "tries_buttons_#{@diet_method.id}"}
        = render "tries/try", diet_method: @diet_method
      #comments
        = render "diet_method_comments/index", diet_method: @diet_method
      #new-comments
        = form_with(model: [@diet_method, @diet_method_comment]) do |f|
          = f.text_area :body, size: "50x3", placeholder: "コメントする"
          = f.submit "送信"