.container
  .row
    .col-md-3
      .sidebar
        .card.shadow-sm.mb-3
          .card-body
            = render "diaries/search"
        = render "layouts/sidebar", diary: @diary
    .col-md-9
      %h1.text-center.en.mb-0.mt-3 Diaries
      %p.text-center.border-bottom.mb-0.pb-3 日記
      - if @diaries.present?
        = render "index", diaries: @diaries
      - elsif params[:q].present?
        条件に一致する日記はありません。
      - else
        .text-center
          ここにはフォローしているユーザーの日記が表示されます。
          = link_to "ユーザーを探す", customers_path , class: "btn btn-danger rounded-pill"
