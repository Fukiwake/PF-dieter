= form_with model: @diary, local: true do |f|
  .field
    = f.label :post_date, "投稿日"
    %br/
    = f.date_select :post_date
  .field
    = f.label :weight, "体重"
    %br/
    = f.text_field :weight, autofocus: true
    kg
  .field
    = f.label :body_fat_percentage, "体脂肪率"
    %br/
    = f.text_field :body_fat_percentage
    \%
  .field
    = f.label :title, "タイトル"
    %br/
    = f.text_field :title
  .field
    = f.label :body, "本文"
    %br/
    = f.text_area :body, size: "100x5"
  .field
    = f.label :image, "画像"
    %br/
    = f.attachment_field :image
  .field
    = f.fields_for :check_list_diaries do |c|
      - i = 0
      - current_customer.trying_diet_methods.each do |method|
        - method.check_lists.each do |list|
          %div{ data: {index: "#{i}"} }
            = c.check_box :check_list_id, {name: "diary[check_list_diaries_attributes][#{i}][check_list_id]"}, list.id, nil
            = list.body
          - i += 1
  .actions
    = f.submit "投稿", class: "btn btn-success"