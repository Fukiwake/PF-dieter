- if current_customer.following?(customer)
  = link_to "フォロー中", customer_relationships_path(customer.id), method: :delete, class: "btn btn-danger rounded-pill unfollow-button", remote: true
- else
  = link_to "フォロー", customer_relationships_path(customer.id), method: :post, class: "btn btn-outline-danger rounded-pill follow-button", remote: true