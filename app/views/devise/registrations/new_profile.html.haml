.container
  .row
    .col-md-3
      .sidebar
        = render "layouts/sidebar"
    .col-md-9
      %h2.page-title.my-4.mb-4 会員情報入力
      = render "devise/shared/error_messages", resource: @customer
      .new-profile-form
        = form_with model: @customer, url: customers_create_profile_path, local: true do |f|
          %table.table.table-borderless
            %tr
              %td.w-25
                ユーザー名
                %span.badge.badge-danger.ml-2 必須
              %td.w-25= f.text_field :name, placeholder: "10文字以内", class: "form-control"
            %tr
              %td
                性別
                %span.badge.badge-danger.ml-2 必須
              %td.form-inline
                = f.radio_button :gender, 1, class: "form-check-input"
                男性
                = f.radio_button :gender, 2, class: "form-check-input ml-2"
                女性
            %tr
              %td
                生年月日
                %span.badge.badge-danger.ml-2 必須
              %td.form-group
                = f.text_field :birthyear, placeholder: "2000", class: "form-control"
              %td.form-inline
                年
                = f.date_select :birthdate, {discard_year: true}, class: "form-control ml-2"
                日
            %tr
              %td
                身長
                %span.badge.badge-danger.ml-2 必須
              %td.form-group
                = f.text_field :height, placeholder: "170.9", class: "form-control"
              %td
                cm
            %tr
              %td
                目標体重
                %span.badge.badge-danger.ml-2 必須
              %td.form-group
                = f.text_field :target_weight, placeholder: "67.6", class: "form-control"
              %td
                kg
            %tr
              %td 目標体脂肪率
              %td.form-group
                = f.text_field :target_body_fat_percentage, placeholder: "15.3", class: "form-control"
              %td
                ％
            %tr
              %td ダイエットスタイル
              %td.form-group
                = f.check_box :diet_style1 ,{class: "form-check-input"}, "true", "false"
                運動メイン
                %br
                = f.check_box :diet_style2 ,{class: "form-check-input"}, "true", "false"
                食事制限メイン
                %br
                = f.check_box :diet_style3 ,{class: "form-check-input"}, "true", "false"
                長期継続
                %br
                = f.check_box :diet_style4 ,{class: "form-check-input"}, "true", "false"
                短期集中
            %tr
              %td
              %td= f.submit "新規登録", class: "btn btn-success px-5"

