.container
  .row
    .col-md-3
      = render "layouts/signed_in_sidebar"
    .col-md-9
      %h1 パスワードリセット
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        %table.table.table-borderless.mt-4
          %tr
            %th メールアドレス
            %td= f.text_field :email, size: 50, placeholder: "dieter@sample.com", autocomplete: "email", autofocus: true
          %tr
            %th
            %td= f.submit "パスワード再設定メールを送信", class: "btn btn-primary px-5"
